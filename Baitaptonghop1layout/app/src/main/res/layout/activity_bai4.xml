<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red2"
    android:padding="30dp">

    <LinearLayout
        android:id="@+id/ln_hoz1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:text="@string/txt_head"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="55sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_hoz2"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_below="@+id/ln_hoz1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:backgroundTint="@color/blue2"
            android:background="@drawable/border_radius"
            android:drawableLeft="@mipmap/logo_facebook"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="@string/sign_in_face"
            android:textAllCaps="false"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            tools:ignore="RtlHardcoded,RtlSymmetry"
            tools:targetApi="lollipop" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_hoz3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_below="@+id/ln_hoz2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="@string/txt_create"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@drawable/border_radius"
            android:backgroundTint="@color/yellow2"
            android:text="@string/sign_up_mail"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            tools:targetApi="lollipop" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_hoz4"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_below="@+id/ln_hoz3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="@string/txt_accounted"
            android:layout_weight="0.40"
            tools:ignore="InefficientWeight" />

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/border_radius"
            android:backgroundTint="@color/yellow2"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="@string/login"
            android:textAllCaps="false" />
    </LinearLayout>
</RelativeLayout>
